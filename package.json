{
	"name": "watermycode",
	"displayName": "waterMyCode",
	"description": "Water Drinking Reminder Extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"publisher": "mntcodes.com",
	"contributes": {
		"commands": [
			{
				"command": "watermycode.startWaterReminder",
				"title": "WaterMyCode💧 - Start Water Reminder ✅"
			},
			{
				"command": "watermycode.stopWaterReminder",
				"title": "WaterMyCode💧 - Stop Water Reminder 🛑"
			},
			{
				"command": "watermycode.openSettings",
				"title": "WaterMyCode💧 - Add Custom Settings ⚙️",
				"category": "watermycode"
			}
		]
	},
	"configuration": {
		"type": "object",
		"title": "Hydration Reminder Settings",
		"properties": {
			"hydrationReminder.weight": {
				"type": "number",
				"default": 70,
				"minimum": 30,
				"maximum": 150,
				"description": "Your weight (in kilograms) to calculate how much water you need."
			},
			"hydrationReminder.sound": {
				"type": "string",
				"default": "water-drinking",
				"enum": [
					"water-pouring",
					"water-drinking"
				],
				"description": "Choose the sound you want to play for the reminder."
			},
			"hydrationReminder.interval": {
				"type": "number",
				"default": 30,
				"minimum": 15,
				"maximum": 120,
				"description": "Interval for the water reminder (in minutes)."
			}
		}
	},
	"files": [
		"sounds/water-pouring.mp3",
		"sounds/water-drinking.mp3"
	],
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@types/vscode": "^1.93.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^9.9.1"
	},
	"dependencies": {
		"web-audio-api": "^0.2.2"
	}
}
